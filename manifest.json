{
	"name": "Mercurial",
	"include": {
		"dev": [
			["*.*", ["*builder.py",
					 "*toplist.py",
					 "*.sublime-workspace",
					 "*.sublime-project",
					 "*.JSON-tmLanguage",
					 "*.ps1",
					 "*.hg*",
					 "*manifest.json"]
			],
			["./shglib/*.py", []],

			["./Support/*.*", []],

			["./tests/*.py", []],
			["./tests/shglib/*.py", []]

		],
		"release": [
			["*.*", ["*builder.py",
					 "*toplist.py",
					 "*test_harness.py",
					 "*test_xharness.py",
					 "*test_runner.py",
					 "*test_runner.py",
					 "*.sublime-workspace",
					 "*.sublime-project",
					 "*.JSON-tmLanguage",
					 "*.ps1",
					 "*.hg*",
					 "*manifest.json"]
			],
			["./shglib/*.py", []],

			["./Support/*.*", []]
		]
	}
}
